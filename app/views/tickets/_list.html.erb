<div id="filterrific_results">
    <div>
      <%= page_entries_info tickets  %>
    </div>
    <table>
      <thead>
      <tr>
        <th>Status</th>
        <th>Name</th>
        <th>Reference</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Full body</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.ticket_status.name%></td>
            <td><%= ticket.name %></td>
            <td><%= ticket.u_reference %></td>
            <td><%= ticket.email %></td>
            <td><%= ticket.subject %></td>
            <td><%= ticket.full_body %></td>
            <td><%= link_to 'Show', ticket %></td>
            <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= will_paginate tickets  %>
</div>