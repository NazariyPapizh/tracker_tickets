<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :u_reference %>
    <%= f.association :department %>
    <%= f.input :email %>
    <%= f.input :subject %>
    <%= f.input :full_body, :input_html => {:rows => 10} %>
    <hr/>
    <%= f.association :ticket_status %>
    <%= f.input :response, :input_html => {:rows => 10, :placeholder => 'enter your response'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
